<div class="user-info-popup">
  <% if user && user.name && user.username %>
    <h3><%= user.name %></h3>
    <img src="<%= user.profile_photo_url %>" alt="Profile Photo" class="user-photo">
    <div class="user-details">  
      <p>@<%= user.username %></p>
      <% if user.bio %>
        <p>Bio: <%= user.bio %></p>
      <% end %>
    </div>
  <% else %>
    <p>No user information available</p>
  <% end %>
</div>
